<Window x:Class="FitnessTracker.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTracker"
        mc:Ignorable="d"
        Title="Login" Height="800" Width="1100">
    <Grid x:Name="LoginGrid">
        <StackPanel Background="#666666" Width="400" Height="400">
            <Image Source="media/simplyFit.png" Width="300" Margin="0 10 0 20"></Image>
            <Label Foreground="White" FontSize="25" HorizontalAlignment="Center">Login</Label>
            <TextBox Foreground="#666666" Width="250" Margin="0 30 0 10" FontSize="16">Username</TextBox>
            <TextBox Foreground="#666666" Width="250" Margin="0 10 0 30" FontSize="16">Password</TextBox>
            <Button Background="#2FC191" Foreground="White" Width="200" Height="40" FontSize="15">Submit</Button>
            <Label HorizontalAlignment="Center">
                <Hyperlink Foreground="White" >Forgot Password?</Hyperlink>
            </Label>
        </StackPanel>
        
    </Grid>
</Window>
